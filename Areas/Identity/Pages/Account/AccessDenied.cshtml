@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container text-center mt-5">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <div class="card-body">
            <!-- Big Warning Icon -->
            <div class="text-danger mb-3">
                <i class="bi bi-shield-lock" style="font-size: 4rem;"></i>
            </div>

            <h1 class="text-danger fw-bold">Access Denied</h1>
            <p class="text-muted fs-5 mb-4">
                Sorry, you don’t have permission to view this page.
                If you believe this is an error, please contact the administrator.
            </p>

            <div class="d-flex justify-content-center gap-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4">
                    <i class="bi bi-house"></i> Back to Home
                </a>
                @* <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-danger px-4">
                    <i class="bi bi-box-arrow-in-right"></i> Login Again
                </a> *@
            </div>
        </div>
    </div>
</div>
