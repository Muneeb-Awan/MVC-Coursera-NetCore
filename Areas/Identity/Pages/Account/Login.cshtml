@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 420px; width:100%;">
        <div class="text-center mb-4">
            <i class="bi bi-shield-lock-fill display-3 text-primary"></i>
            <h2 class="fw-bold mt-2">Welcome Back</h2>
            <p class="text-muted">Please sign in to continue</p>
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- Email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Remember me -->
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label asp-for="Input.RememberMe" class="form-check-label"></label>
            </div>

            <!-- Login Button -->
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">
                <i class="bi bi-box-arrow-in-right me-2"></i> Login
            </button>

            <!-- Extra Links -->
            <div class="mt-3 text-center">
                <a id="forgot-password" asp-page="./ForgotPassword" class="d-block small">Forgot your password?</a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="d-block small">Create a new account</a>
            </div>
        </form>

        <!-- External Logins -->
        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <hr />
            <div class="text-center">
                <p class="text-muted mb-3">Or sign in with</p>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-dark w-100 mb-2" name="provider" value="@provider.Name">
                            <i class="bi bi-box-arrow-in-right me-2"></i> @provider.DisplayName
                        </button>
                    }
                </form>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
