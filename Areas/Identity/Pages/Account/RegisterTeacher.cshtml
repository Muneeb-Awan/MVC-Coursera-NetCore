@page
@model RegisterTeacherModel
@{
    ViewData["Title"] = "Teacher Registration";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h2 class="mb-0">👨‍🏫 Instructor Registration</h2>
                </div>
                <div class="card-body p-4">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <!-- Name -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Name" class="form-control" autocomplete="name" placeholder="Full Name" />
                            <label asp-for="Input.Name">Full Name</label>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" placeholder="confirm password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        @* <!-- Teacher Specific Fields -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Expertise" class="form-control" placeholder="Subject Expertise" />
                            <label asp-for="Input.Expertise">Subject Expertise</label>
                            <span asp-validation-for="Input.Expertise" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.ExperienceYears" type="number" class="form-control" placeholder="Experience (Years)" />
                            <label asp-for="Input.ExperienceYears">Experience (Years)</label>
                            <span asp-validation-for="Input.ExperienceYears" class="text-danger"></span>
                        </div>
 *@
                        <!-- Submit -->
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success">
                            Register as Teacher
                        </button>
                    </form>
                </div>
                <div class="card-footer text-center bg-light rounded-bottom-4">
                    <small>Already have an account? <a asp-area="Identity" asp-page="/Account/Login">Login here</a></small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
