@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 450px; width:100%;">
        <div class="text-center mb-4">
            <i class="bi bi-person-plus-fill display-3 text-success"></i>
            <h2 class="fw-bold mt-2">Create Account</h2>
            <p class="text-muted">Join us and start learning today</p>
        </div>

        <!-- Register Form -->
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- Name -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" autocomplete="name" placeholder="Full Name" />
                <label asp-for="Input.Name">Full Name</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" placeholder="Confirm Password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Submit -->
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success">
                <i class="bi bi-person-check-fill me-2"></i> Register
            </button>

            <!-- Login Redirect -->
            <div class="mt-3 text-center">
                <p class="small text-muted">
                    Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login here</a>
                </p>
            </div>
        </form>

        <!-- External Providers -->
        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <hr />
            <div class="text-center">
                <p class="text-muted mb-3">Or sign up with</p>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-dark w-100 mb-2" name="provider" value="@provider.Name">
                            <i class="bi bi-box-arrow-in-right me-2"></i> @provider.DisplayName
                        </button>
                    }
                </form>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
