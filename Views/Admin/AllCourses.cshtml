@model List<MyCoursera.Models.Course>
@{
    ViewData["Title"] = "All Courses";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">📊 All Courses</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No courses available yet.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var course in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-lg border-0 rounded-3">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@course.Title</h5>
                            <p class="text-muted">Author: @course.Author</p>
                            <p>@course.Description</p>

                            <span class="badge
                                        @(course.status == CourseState.Pending ? "bg-warning text-dark"
                                                                  : course.status == CourseState.Approved ? "bg-success"
                                                                  : "bg-danger")">
                        @course.status
                    </span>

                            <div class="mt-3">
                                <form asp-controller="Admin" asp-action="ChangeCourseState" method="post" class="d-flex gap-2">
                                    <input type="hidden" name="id" value="@course.Id" />
                                    <select name="newState" class="form-select form-select-sm">
                                        <option value="Pending" selected="@(course.status == CourseState.Pending)">Pending</option>
                                        <option value="Approved" selected="@(course.status == CourseState.Approved)">Approved</option>
                                        <option value="Rejected" selected="@(course.status == CourseState.Rejected)">Rejected</option>
                                    </select>
                                    <button type="submit" class="btn btn-outline-primary btn-sm">Update</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                }
        </div>
    }
</div>
