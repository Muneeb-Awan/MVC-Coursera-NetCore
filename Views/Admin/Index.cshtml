@{
    ViewData["Title"] = "Admin Dashboard";
    var stats = Model; // anonymous object passed from controller
}

<div class="container mt-5">
    <h2 class="text-center mb-4">📊 Admin Dashboard</h2>
    <div class="row g-4">

        <!-- Total Courses -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-3 text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-journal-text"></i> Total Courses</h5>
                    <h2>@stats.TotalCourses</h2>
                </div>
            </div>
        </div>

        <!-- Pending Courses -->
        <!-- Pending Courses -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-3 text-white bg-warning">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="bi bi-hourglass-split"></i> Pending Courses</h5>
                    <h2>@stats.PendingCourses</h2>
                    <a asp-controller="Admin" asp-action="PendingCourses"
                       class="btn btn-dark mt-auto">
                        <i class="bi bi-gear"></i> Actions
                    </a>
                </div>
            </div>
        </div>

        <!-- Approved Courses -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-3 text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-check-circle"></i> Live Courses</h5>
                    <h2>@stats.ApprovedCourses</h2>
                </div>
            </div>
        </div>

        <!-- Total Students -->
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3 text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-people"></i> Total Students</h5>
                    <h2>@stats.TotalStudents</h2>
                </div>
            </div>
        </div>

        <!-- Total Instructors -->
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3 text-white bg-dark">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person-badge"></i> Instructors</h5>
                    <h2>@stats.TotalInstructors</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body text-center">
                    <h5 class="card-title">📚 Manageable Courses</h5>
                    <h2 class="text-primary">@Model.TotalCourses</h2>
                    <a asp-controller="Admin" asp-action="AllCourses" class="btn btn-primary btn-sm mt-auto">
                        Actions
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
