@model List<MyCoursera.Models.Course>
@{
    ViewData["Title"] = "My Courses";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">📘 My Enrolled Courses</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> You are not enrolled in any courses yet.
            <a asp-controller="Student" asp-action="Index" class="alert-link">Explore Courses</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var course in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-lg border-0 rounded-3">
                        @* //<img src="https://picsum.photos/400/200?random=@course.Id" class="card-img-top" alt="@course.Title"> *@
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@course.Title</h5>
                            <p class="card-text text-muted">@course.Description</p>

                            <!-- Placeholder Progress (Replace with real tracking later) -->
                            <p class="small fw-bold mb-1">Progress</p>
                            <div class="progress mb-3" style="height: 20px;">
                                <div class="progress-bar bg-success"
                                     role="progressbar"
                                     style="width: 50%;">
                                    50%
                                </div>
                            </div>

                            <div class="mt-auto d-flex justify-content-between">
                                <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <form asp-controller="Student" asp-action="LeaveCourse" asp-route-courseId="@course.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-x-circle"></i> Cancel Enrollment
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
