@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="bg-dark text-white text-center py-5" style="background: url('https://images.unsplash.com/photo-1529070538774-1843cb3265df?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80') center/cover;">
    <div class="container py-5">
        <h1 class="display-3 fw-bold">Welcome to MyCoursera</h1>
        <p class="lead">Learn. Teach. Grow. Join thousands of learners and instructors worldwide.</p>
        <a class="btn btn-lg btn-success me-2" asp-area="Identity" asp-page="/Account/Register">Get Started</a>
        <a class="btn btn-lg btn-outline-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
</div>

<!-- Features Section -->
<div class="container my-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow border-0 h-100">
                <img src="https://s39613.pcdn.co/wp-content/uploads/2025/04/iStock-1998218882-scaled.jpg" class="card-img-top" alt="Learn">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">For Students</h5>
                    <p class="card-text">Access 10,000+ courses from top universities and companies, anytime, anywhere.</p>
                    <a asp-controller="Student" asp-action="Index" class="btn btn-primary">Explore Courses</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-0 h-100">
                <img src="https://www.visaplace.com/wp-content/uploads/2012/10/teacher-immigrate-to-canada.png" class="card-img-top" alt="Teach">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">For Instructors</h5>
                    <p class="card-text">Share your expertise, build a global audience, and inspire learners everywhere.</p>
                    <a asp-controller="Instructor" asp-action="Index" class="btn btn-warning">Start Teaching</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow border-0 h-100">
                <img src="https://uploads.heightsplatform.com/program/public/blogarticle/307/cover_image/original-6efac2c0d2f37ff11b71404ae8afb19e.jpg" class="card-img-top" alt="Certificates">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">Earn Certificates</h5>
                    <p class="card-text">Boost your career with industry-recognized certificates after completing courses.</p>
                    <a asp-controller="Student" asp-action="Explore" class="btn btn-success">Start Learning</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="bg-light py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-3">
                <h2 class="fw-bold">10,000+</h2>
                <p>Courses Available</p>
                <div class="progress">
                    <div class="progress-bar bg-success" style="width: 90%;">90%</div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <h2 class="fw-bold">50,000+</h2>
                <p>Students Enrolled</p>
                <div class="progress">
                    <div class="progress-bar bg-primary" style="width: 75%;">75%</div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <h2 class="fw-bold">1,200+</h2>
                <p>Expert Instructors</p>
                <div class="progress">
                    <div class="progress-bar bg-warning" style="width: 60%;">60%</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call To Action -->
<div class="text-center py-5 bg-dark text-white">
    <h2 class="fw-bold">Ready to start your journey?</h2>
    <p class="lead">Join now and unlock your potential.</p>
    <a class="btn btn-lg btn-success me-2" asp-area="Identity" asp-page="/Account/Register">Join Free</a>
    <a class="btn btn-lg btn-outline-light" asp-controller="Home" asp-action="About">Learn More</a>
</div>
