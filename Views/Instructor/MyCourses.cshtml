@model List<MyCoursera.Models.Course>

<div class="container mt-4">
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-2 h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary">@course.Title</h5>
                        <p class="card-text text-muted">@course.Description</p>

                        <p>
                            <span class="badge
                                    @(course.status == MyCoursera.Models.CourseState.Approved ? "bg-success" :
                                                                    course.status == MyCoursera.Models.CourseState.Rejected ? "bg-danger" : "bg-warning text-dark")">
                            @course.status
                        </span>
                    </p>

                    @if (course.EnrolledStudents != null && course.EnrolledStudents.Count > 0)
                        {
                            <a asp-action="ListStudents" asp-route-id="@course.Id" class="btn btn-info btn-sm mb-3">
                                List All Students (@course.EnrolledStudents.Count)
                            </a>
                        }
                        else
                        {
                            <p class="text-muted">No students enrolled</p>
                        }

                        <!-- Buttons aligned bottom-right -->
                        <div class="mt-auto d-flex justify-content-end gap-2">
                            <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
