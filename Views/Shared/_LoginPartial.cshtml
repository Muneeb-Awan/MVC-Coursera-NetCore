@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav ms-auto align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        var currentUser = await UserManager.GetUserAsync(User);
        @if (await UserManager.IsInRoleAsync(currentUser, "Admin"))
        {
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-display-fill me-2"></i> Dashboard
                </a>
            </li>
        }
        @if (await UserManager.IsInRoleAsync(currentUser, "Instructor"))
        {
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center" asp-controller="Instructor" asp-action="Index">
                    <i class="bi bi-display-fill me-2"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center" asp-controller="Instructor" asp-action="MyCourses">
                    <i class="bi bi-journal-text me-2 text-success"></i> My Courses
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center" asp-controller="Instructor" asp-action="NewCourse">
                    <i class="bi bi-plus-circle-fill me-2 text-warning"></i> New Course
                </a>
            </li>
        }

        @if (await UserManager.IsInRoleAsync(currentUser, "Student"))
        {
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center" asp-controller="Student" asp-action="Index">
                    <i class="bi bi-display-fill me-2"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center" asp-controller="Student" asp-action="MyCourses">
                    <i class="bi bi-journal-text me-2 text-success"></i> My Courses
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link d-flex align-items-center" asp-controller="Student" asp-action="Explore">
                    <i class="bi bi-compass-fill me-2 text-info"></i> Explore Courses
                </a>
            </li>
        }

        <!-- Profile Dropdown -->
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle me-2"></i>
                <span>Hello, <strong>@UserManager.GetUserName(User)</strong></span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0" aria-labelledby="userDropdown">
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="bi bi-gear-fill me-2"></i> Manage Account
                    </a>
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                    <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout"
                          asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="dropdown-item text-danger">
                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link d-flex align-items-center" asp-controller="Home" asp-action="Register">
                <i class="bi bi-person-plus-fill me-2 text-success"></i> Register
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link d-flex align-items-center" id="login" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right me-2 text-primary"></i> Login
            </a>
        </li>
    }
</ul>
